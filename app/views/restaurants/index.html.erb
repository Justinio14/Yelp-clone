<% if @restaurants.any? %>
    <% @restaurants.each do |restaurant| %>
    <p><%= link_to restaurant.name, restaurant_path(restaurant) %></p>
      <% if user_signed_in? %>
      <p><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></p>
        <% if current_user.id == restaurant.user_id %>
        <p><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></p>
        <p><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></p><br>
        <% end %>
      <% end %>
    <% end %>
    <% else %>
    <h1>No restaurants yet</h1>
<% end %>

<a href="restaurants/new">Add a restaurant</a>
